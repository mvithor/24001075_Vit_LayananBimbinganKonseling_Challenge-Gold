<!-- Main content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0"><%- title %></h1>
          </div><!-- /.col -->
        </div>
      </div>
    </div>
 
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Formulir Pelanggaran</h3>
              </div>
              <div class="card-body">
                <form role="form" id="myForm" data-toggle="validator" action="/dashboard/admin/tambah-pelanggaran" method="post">
                  <div class="form-group">
                    <label for="student_id" class="control-label">Nama Siswa</label>
                    <select class="form-control" id="student_id" name="student_id" required>  
                        <% students.forEach((student) => { %>
                        <option value="<%= student.id %>"><%= student.name %></option>
                      <% }); %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="kelas" class="control-label">Kelas</label>
                    <input type="text" class="form-control" name="kelas" id="kelas" placeholder="Kelas" required />
                  </div>
                  <div class="form-group">
                    <label for="pelanggaran" class="control-label">Pelanggaran</label>
                    <input type="text" class="form-control" name="pelanggaran" id="pelanggaran" placeholder="Pelanggaran" required />
                  </div>
                  <div class="form-group">
                    <label for="poin" class="control-label">Poin</label>
                    <input type="number" class="form-control" name="poin" id="poin" placeholder="Poin" required />
                  </div>
                  <div class="form-group">
                    <label for="deskripsi" class="control-label">Deskripsi</label>
                    <textarea class="form-control" name="deskripsi" id="deskripsi" placeholder="Deskripsi"></textarea>
                  </div>
                  <div class="form-group">
                    <label for="prosedur_konseling" class="control-label">Prosedur Konseling</label>
                    <textarea class="form-control" name="prosedur_konseling" id="prosedur_konseling" placeholder="Prosedur Konseling"></textarea>
                  </div>
                  <!-- Form Actions -->
                  <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="/dashboard/admin/pelanggaran" class="btn btn-default">Cancel</a>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
</div>
